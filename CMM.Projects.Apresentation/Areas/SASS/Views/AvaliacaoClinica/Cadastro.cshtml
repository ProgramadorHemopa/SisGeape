@model CMM.Projects.Apresentation.Areas.SASS.Models.AvaliacaoClinicaModelView

@{
    ViewData["TituloPagina"] = "Cadastro Avaliação Clínica";
}
<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-body">

                @using (Html.BeginForm(FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.AVC_ID)

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="row m-b-15">
                            <div class="col-12">
                                @Html.LabelFor(model => model.AVC_DESCRICAO, htmlAttributes: new { @class = "control-label col-md-2" })
                                @Html.EditorFor(model => model.AVC_DESCRICAO, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off" } })
                                @Html.ValidationMessageFor(model => model.AVC_DESCRICAO, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <hr />
                        <div class="pull-right m-t-15">
                            @Html.ActionLink("Voltar", "Index", null, new { @class = "btn-sm btn-light waves-light waves-effect" })
                            <input type="submit" value="Salvar" class="btn btn-sm btn-primary" />

                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
