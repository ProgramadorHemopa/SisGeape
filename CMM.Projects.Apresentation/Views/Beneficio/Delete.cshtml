</div>

<div class="row">

    <div class="modal-body">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.BNF_DESCRICAO)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.BNF_DESCRICAO)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.BNF_VALOR)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.BNF_VALOR)
            </dd>

