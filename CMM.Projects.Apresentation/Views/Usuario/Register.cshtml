@model CMM.Projects.Apresentation.Models.SystemRoleModelView
@{
    ViewData["TituloPagina"] = "Cadastro de Usuário";


}
<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(x=>x.SUROL_ID)
                        <div class="row">
                            @if (Model.SUROL_ID == 0)
                            {
                                <div class="form-group  col-lg-12">
                                    @Html.LabelFor(model => model.SUSR_ID, htmlAttributes: new { @class = "control-label" })
                                    @Html.DropDownListFor(model => model.SUSR_ID, null, "Selecione", htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.SUSR_ID, "", new { @class = "text-danger" })
                                </div>
                            }
                            else
                            {
                                @Html.HiddenFor(x => x.SUSR_ID)
                                <div class="form-group  col-lg-12">
                                    @Html.LabelFor(model => model.SUSR_ID, htmlAttributes: new { @class = "control-label" })
                                    @Html.DropDownListFor(model => model.SUSR_ID, null, "Selecione", htmlAttributes: new { @class = "form-control", disabled = "disabled" })
                                    @Html.ValidationMessageFor(model => model.SUSR_ID, "", new { @class = "text-danger" })
                                </div>
                            }
                        </div>
                        <div class="row">
                            <div class="form-group col-md-6 col-lg-6">

                                @Html.LabelFor(model => model.SIS_ID, htmlAttributes: new { @class = "control-label" })
                                @Html.EnumDropDownListFor(model => model.SIS_ID, "Selecione", htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.SIS_ID, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group col-md-6 col-lg-6">
                                @Html.LabelFor(model => model.SUSR_PERFIL, htmlAttributes: new { @class = "control-label" })
                                @Html.EnumDropDownListFor(model => model.SUSR_PERFIL, "Selecione", htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.SUSR_PERFIL, "", new { @class = "text-danger" })
                            </div>

                        </div>

                        <hr />
                        <div class="pull-right m-t-15">
                            @Html.ActionLink("Voltar", "Index", null, new { @class = "btn-sm btn-light waves-light waves-effect" })
                            <input type="submit" value="Salvar" class="btn btn-sm btn-primary" />
                        </div>
                    </div>

                }
            </div>
            </div>
        </div>

</div>
