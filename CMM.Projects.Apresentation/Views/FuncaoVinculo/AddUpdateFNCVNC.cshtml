@model CMM.Projects.Apresentation.Models.FuncaoVinculoModelView
<div class="modal-header">
    <h3 class="modal-title"><span class="fa fa-edit"></span> @ViewBag.Title</h3>

    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>

</div>

@using (Html.BeginForm("AddUpdateFNCVNC", "FuncaoVinculo", FormMethod.Post, new { id = "formFuncao" }))
{
    <div class="modal-body">

        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.FNCVNC_ID)
            @Html.HiddenFor(model => model.FUN_ID)

            <div class="row">
                <div class="col-md-8 col-lg-8 col-xs-8">
                    @Html.LabelFor(model => model.VNC_ID, htmlAttributes: new { @class = "control-label" })
                    @Html.DropDownListFor(model => model.VNC_ID, null, htmlAttributes: new { @class = "form-control form-control-sm" })
                    @Html.ValidationMessageFor(model => model.VNC_ID, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-4 col-lg-4 col-xs-4">
                    @Html.LabelFor(model => model.FNC_ID, htmlAttributes: new { @class = "control-label" })
                    @Html.DropDownListFor(model => model.FNC_ID, null, "Selecione", htmlAttributes: new { @class = "form-control form-control-sm" })
                    @Html.ValidationMessageFor(model => model.FNC_ID, "", new { @class = "text-danger" })
                </div>
            </div>




            <div class="row">
                <div class="col-md-6 col-lg-6 col-xs-6">

                    @Html.LabelFor(model => model.FNCVNC_DATAINICIO, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.FNCVNC_DATAINICIO, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                    @Html.ValidationMessageFor(model => model.FNCVNC_DATAINICIO, "", new { @class = "text-danger" })
                </div>

                <div class="col-md-6 col-lg-6 col-xs-6">
                    @Html.LabelFor(model => model.FNCVNC_DATAFIM, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.FNCVNC_DATAFIM, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                    @Html.ValidationMessageFor(model => model.FNCVNC_DATAFIM, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="row">
                <div class="col-md-6 col-lg-6 col-xs-6">
                    @Html.LabelFor(model => model.FNCVNC_NUMPORTARIA, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.FNCVNC_NUMPORTARIA, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                    @Html.ValidationMessageFor(model => model.FNCVNC_NUMPORTARIA, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-6 col-lg-6 col-xs-6">

                    @Html.LabelFor(model => model.FNCVNC_DATAPORTARIA, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.FNCVNC_DATAPORTARIA, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                    @Html.ValidationMessageFor(model => model.FNCVNC_DATAPORTARIA, "", new { @class = "text-danger" })
                </div>


            </div>


        </div>
    </div>

    <div class="modal-footer">
        <a data-dismiss="modal" class="btn btn-sm btn-outline-secondary">Voltar</a>
        <input type="submit" value="Salvar" class="btn btn-secondary" />
    </div>

}





@Scripts.Render("~/bundles/jqueryval")
<script src="~/Scripts/ccm.projects/Cadastro_Funcao.js"></script>
<script type="text/javascript">
    function atualizarGrid() {
        dataTableFuncao.ajax.reload();
        $('#minhaModal').modal('hide');
    };

</script>
