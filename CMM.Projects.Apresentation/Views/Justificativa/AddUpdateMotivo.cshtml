@model CMM.Projects.Apresentation.Models.MotivoJustificativaModelView


<div class="modal-header">
    <h3 class="modal-title"><span class="fa fa-edit"></span> @ViewBag.Title</h3>

    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>

</div>

@using (Html.BeginForm("AddUpdateMotivo", "Justificativa", FormMethod.Post, new { id = "formCrud" }))
{
    <div class="modal-body">

        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.MTVJUS_ID)

            <div class="row">
                <div class="col-md-12 col-lg-12 col-xl-12 col-xs-12">

                    @Html.LabelFor(model => model.MTVJUS_NOME, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.MTVJUS_NOME, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                    @Html.ValidationMessageFor(model => model.MTVJUS_NOME, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

    </div>
    <div class="modal-footer">
        <a data-dismiss="modal" class="btn btn-sm btn-outline-secondary">Voltar</a>
        <input type="button" value="Salvar" class="btn btn-secondary" />
    </div>

}
@Scripts.Render("~/bundles/jqueryval")
<script src="~/Scripts/ccm.projects/EnviaForm.js"></script>
