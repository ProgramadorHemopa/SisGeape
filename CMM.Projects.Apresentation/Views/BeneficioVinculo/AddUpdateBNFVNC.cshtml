@model CMM.Projects.Apresentation.Models.BeneficioVinculoModelView

<div class="modal-header">
    <h3 class="modal-title"><span class="fa fa-edit"></span> @ViewBag.Title</h3>

    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>

</div>
@using (Html.BeginForm("AddUpdateBNFVNC", "BeneficioVinculo", FormMethod.Post, new { id = "formBeneficio", @autocomplete="off" }))
{
    <div class="modal-body">
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.BNFVNC_ID)
            @Html.HiddenFor(model => model.FUN_ID)

            <div class="row">
                <div class="form-group col-12 col-md-12 col-lg-12 col-xs-12">
                    @Html.LabelFor(model => model.VNC_ID, htmlAttributes: new { @class = "control-label" })
                    @Html.DropDownListFor(model => model.VNC_ID, null, htmlAttributes: new { @class = "form-control form-control-sm" })
                    @Html.ValidationMessageFor(model => model.VNC_ID, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">

                <div class="form-group col-12 col-md-12 col-lg-12 col-xs-12">
                    @Html.LabelFor(model => model.BNF_ID, htmlAttributes: new { @class = "control-label" })
                    @Html.DropDownListFor(model => model.BNF_ID, null, htmlAttributes: new { @class = "form-control form-control-sm" })
                    @Html.ValidationMessageFor(model => model.BNF_ID, "", new { @class = "text-danger" })
                </div>
            </div>



            <div class="row">
                <div class="form-group col-6 col-md-6 col-lg-6 col-xs-6">

                    @Html.LabelFor(model => model.BNFVNC_DATAINICIO, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.BNFVNC_DATAINICIO, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                    @Html.ValidationMessageFor(model => model.BNFVNC_DATAINICIO, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col-6 col-md-6 col-lg-6 col-xs-6">
                    @Html.LabelFor(model => model.BNFVNC_DATAFIM, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.BNFVNC_DATAFIM, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                    @Html.ValidationMessageFor(model => model.BNFVNC_DATAFIM, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="form-group col-6 col-md-6 col-lg-6 col-xs-6">

                    @Html.LabelFor(model => model.BNFVNC_NUMPORTARIA, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.BNFVNC_NUMPORTARIA, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                    @Html.ValidationMessageFor(model => model.BNFVNC_NUMPORTARIA, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col-6 col-md-6 col-lg-6 col-xs-6">
                    @Html.LabelFor(model => model.BNFVNC_DATAPORTARIA, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.BNFVNC_DATAPORTARIA, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                    @Html.ValidationMessageFor(model => model.BNFVNC_DATAPORTARIA, "", new { @class = "text-danger" })
                </div>
            </div>

        </div>
    </div>

    <div class="modal-footer">
        <a data-dismiss="modal" class="btn btn-sm btn-outline-secondary">Voltar</a>
        <input type="submit" value="Salvar" class="btn btn-secondary" />
    </div>
}



@Scripts.Render("~/bundles/jqueryval")
<script src="~/Scripts/ccm.projects/Cadastro_Beneficio.js"></script>
<script type="text/javascript">
    function atualizarGrid() {
        dataTableBeneficio.ajax.reload();
        $('#minhaModal').modal('hide');
    };

</script>

