@model CMM.Projects.Apresentation.Models.ConselhoClasseModelView

<div class="modal-header">
    <h3 class="modal-title"><span class="fa fa-edit"></span> @ViewBag.Title</h3>

    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>

</div>
@using (Html.BeginForm("CadastroConCla", "ConselhoClasse", FormMethod.Post,new { @autocomplete="off"}))
{
    <div class="modal-body">

        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.CONCLA_ID)
            @Html.HiddenFor(model => model.VNC_ID)
            @Html.HiddenFor(model => model.CONCLA_DATARECEBIMENTO)


            <div class="row m-b-15">
                <div class="col-md-6">

                    @Html.LabelFor(model => model.CON_ID, htmlAttributes: new { @class = "control-labe" })
                    @Html.DropDownListFor(model => model.CON_ID, (SelectList)ViewBag.Conselho, htmlAttributes: new { @class = "form-control form-control-sm " })
                    @Html.ValidationMessageFor(model => model.CON_ID, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-6">

                    @Html.LabelFor(model => model.CONCLA_DATARECEBIMENTO, htmlAttributes: new { @class = "control-label" })
                    @if (Model.CONCLA_DATARECEBIMENTO != null)
                    {
                        <br /> @Model.CONCLA_DATARECEBIMENTO.AsDateTime().ToShortDateString()
                    }
                </div>
            </div>

            <div class="row m-b-15">
                <div class="col-md-6">

                    @Html.LabelFor(model => model.CONCLA_REFANO, htmlAttributes: new { @class = "control-label" })

                    @Html.EditorFor(model => model.CONCLA_REFANO, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                    @Html.ValidationMessageFor(model => model.CONCLA_REFANO, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-6">

                    @Html.LabelFor(model => model.CONCLA_DATAQUITACAO, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.CONCLA_DATAQUITACAO, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                    @Html.ValidationMessageFor(model => model.CONCLA_DATAQUITACAO, "", new { @class = "text-danger" })
                </div>


            </div>





        </div>
    </div>
    <div class="modal-footer">
        <input type="button" data-dismiss="modal" value="Voltar" class="btn btn-sm btn-default  waves-effect waves-light sm-1" />
        <input type="submit" value="Salvar" class="btn btn-sm btn-primary" />
    </div>
}



@Scripts.Render("~/bundles/jqueryval")


