
@{
    ViewData["TituloPagina"] = "Solicitação de Crachá";
}

<div class="row">
    <div class="col-lg-12 col-md-12 col-xl-12">
        <div class="card">
            <div class="card-body">
                @using (Html.BeginForm("RelatorioSolicitacao", "Funcionario", FormMethod.Post, new { @autocomplete = "off" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-row">


                        <div class="form-group col-md-6">
                            @Html.Label("DATA INICIO", htmlAttributes: new { @class = "" })
                            @Html.Editor("dataInicio", new { htmlAttributes = new { @class = "form-control form-control-sm ", @id = "INICIO", @required = "required" } })
                        </div>
                        <div class="form-group col-md-6">
                            @Html.Label("DATA FIM", htmlAttributes: new { @class = "" })
                            @Html.Editor("dataFim", new { htmlAttributes = new { @class = "form-control form-control-sm ", @id = "FIM", @required = "required" } })
                        </div>


                    </div>
                    <hr />
                    <div class="pull-right">

                        <button type="submit" class="btn btn-sm btn-secondary d-md-inline " id="btnPesquisar"><i class="fa fa-search"></i> Pesquisar</button>
                    </div>
                }

            </div>
        </div>
    </div>
</div>

<link href="~/assets/plugins/bootstrap-datepicker/css/bootstrap-datepicker.min.css" rel="stylesheet" type="text/css">
@section scripts{
    <script src="~/Scripts/moment.min.js"></script>
    <script src="~/Scripts/Grid/datetime-moment.js"></script>

    @Scripts.Render("~/bundles/Grid")
    <script src="~/Scripts/moment.min.js"></script>
    <script src="~/Scripts/Grid/datetime-moment.js"></script>
    <script src="~/assets/plugins/bootstrap-datepicker/js/bootstrap-datepicker.min.js"></script>
    <script src="~/assets/js/popper.min.js"></script>
    <script type="text/javascript">
        var dataTable;
        function LoadFunc(url) {
            location.href = url;
            return view("CrachaPendente");
        };

        $(document).ready(function () {
             

                $('#INICIO').val('@TempData["INICIO"]');
                $('#FIM').val('@TempData["FIM"]');

                $('#INICIO').datepicker({
                    autoclose: true,
                    todayHighlight: true
                });

                $('#FIM').datepicker({
                    autoclose: true,
                    todayHighlight: true
                });

        


        });

        

    </script>
    }