@model IEnumerable<CMM.Projects.Apresentation.Models.FuncionarioSolicitarCrachaModelView>

<div class="modal-header">
    <h3 class="modal-title"><span class="fa fa-edit"></span> @ViewBag.Title</h3>

    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>

</div>
<div class="modal-body">
    <div class="row">
        <div class="col-lg-12 col-xl-12 col-md-12">
            <table class="table table-striped table-bordered display responsive nowrap no-footer" cellspacing="0" id="grdCracha">
                <thead class="text-center">
                    <tr>

                        <th>
                            @Html.DisplayNameFor(model => model.VNC_ID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FUNCRC_DATASOLICITACAO)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FUNCRC_TIPO)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.FUNCRC_SITUACAO)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FUNCRC_DATAEMISSAO)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FUNCRC_NUMERO)
                        </th>


                        <th>
                            OBS
                        </th>



                        @*<th></th>*@
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                 @Html.DisplayFor(modelItem => item.VNC_NOME)   
                            </td>
                            <td>
                                @if (item.FUNCRC_DATASOLICITACAO.HasValue)
                                {
                                    @item.FUNCRC_DATASOLICITACAO.Value.ToString("dd/MM/yyyy")
                                }
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TIPOCRACHA)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SITUACAO)
                            </td>

                            <td>
                                @if (item.FUNCRC_DATAEMISSAO.HasValue)
                                {
                                    @item.FUNCRC_DATAEMISSAO.Value.ToString("dd/MM/yyyy")
                                }
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FUNCRC_NUMERO)
                            </td>


                            <td>
                                @*<button type="button" class="btn btn-outline-d m-1" data-toggle="popover" data-trigger="focus" title="Observação" data-placement="top" data-content="@Html.DisplayFor(modelItem => item.FUNCRC_OBSERVACAO)">Popover on top</button>*@

                                <i class="fa fa-search" data-toggle="tooltip" data-placement="left" title="@Html.DisplayFor(modelItem => item.FUNCRC_OBSERVACAO)"></i>

                            </td>

                            @*<td>
                                    @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                                    @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                                    @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                                </td>*@
                        </tr>
                    }
                </tbody>


            </table>
        </div>
    </div>
</div>
<div class="modal-footer">
    <a data-dismiss="modal" class="btn btn-sm btn-outline-secondary">Voltar</a>
</div>

