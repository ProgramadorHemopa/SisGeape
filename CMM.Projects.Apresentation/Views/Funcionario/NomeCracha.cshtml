@model CMM.Projects.Apresentation.Models.FuncionarioNomeCrachaModelView


@{
    ViewData["TituloPagina"] = "Editar Nome Crachá";


}
<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-body">
                <div class="row-sm-12">

                    @using (Html.BeginForm())
                    {

                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.FUN_ID)

                            <div class="form-group">
                                @Html.LabelFor(model => model.FUN_NOMECRACHA, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-12">
                                    @Html.EditorFor(model => model.FUN_NOMECRACHA, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.FUN_NOMECRACHA, "", new { @class = "text-danger" })
                                </div>
                            </div>


                        </div>
                        <hr />
                        <div class="pull-right m-t-15">
                            @Html.ActionLink("Voltar", "SolicitacaoIndex", null,new { @class = "btn-sm btn-light waves-light waves-effect" })
                            <input type="submit" value="Salvar" class="btn btn-sm btn-primary" />
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>




@Scripts.Render("~/bundles/jqueryval")
