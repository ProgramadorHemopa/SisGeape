@model CMM.Projects.Apresentation.Models.FuncionarioSolicitarCrachaModelView

@{
    ViewData["TituloPagina"] = "Registrar Impressão do Crachá";


}
<div class="row m-b-15">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-body">

                <div class="form-group">
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.FUN_NOME)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.FUN_NOME)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.VNC_ID)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.VNC_NOME)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.TIPOCRACHA)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.TIPOCRACHA)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.FUNCRC_DATASOLICITACAO)
                        </dt>
                        <dd>
                            @if (Model.FUNCRC_DATASOLICITACAO.HasValue)
                            {
                                @Model.FUNCRC_DATASOLICITACAO.Value.ToString("dd/MM/yyyy HH:mm:ss");
                            }
                        </dd>

                    </dl>
                    @*@using (Html.BeginForm("Delete", "Cargo", FormMethod.Post, new { id = "formCrud" }))
                        {
                            @Html.AntiForgeryToken()

                            <div class="modal-footer">
                                <a data-dismiss="modal" class="btn btn-sm btn-outline-secondary">Voltar</a>
                                <input type="button" value="Excluir" class="btn btn-outline-danger" />
                            </div>
                        }*@
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row m-b-15">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.FUNCRC_ID)
                        @Html.HiddenFor(model => model.VNC_ID)
                        @Html.HiddenFor(model => model.FUN_ID)
                        @Html.HiddenFor(model => model.FUN_NOME)
                        @Html.HiddenFor(model => model.VNC_NOME)
                        @Html.HiddenFor(model => model.FUNCRC_TIPO)
                        @Html.HiddenFor(model => model.FUNCRC_DATASOLICITACAO)
                        @Html.HiddenFor(model => model.FUNCRC_DATAEMISSAO)
                        @Html.HiddenFor(model => model.FUNCRC_OBSERVACAO)
                        <div class="row">
                            <div class="form-group col-md-12">
                                @Html.LabelFor(model => model.FUNCRC_NUMERO, htmlAttributes: new { @class = "control-label" })
                                <small> (Se o cartão for do tipo <code>PROXIMIDADE</code>, informe o <code>número do cartão</code> que contém no verso do crachá)</small>
                                @Html.EditorFor(model => model.FUNCRC_NUMERO, new { htmlAttributes = new { @class = "form-control",@autocomplete="off" } })
                                @Html.ValidationMessageFor(model => model.FUNCRC_NUMERO, "", new { @class = "text-danger" })
                            </div>

                        </div>


                    </div>
                    <div class="pull-right m-t-15">
                        @Html.ActionLink("Voltar", "SolicitacaoIndex", null, new { @class = "btn-sm btn-light waves-light waves-effect" })
                        <button type="submit" class="btn btn-sm btn-secondary d-md-inline "><i class="fa fa-vcard-o"></i> Registrar Impressão</button>
                    </div>

                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/assets/plugins/jQuery-Mask-Plugin-master/dist/jquery.mask.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#FUNCRC_NUMERO').mask('0000000000 000 00000');
        });
    </script>
}
