@model IEnumerable<CMM.Projects.Apresentation.Models.funcionarios>

@{
    ViewData["TituloPagina"] = "Consulta Unidades";


}
<div class="row m-b-15">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-body">


                <a class=" btn btn-sm btn-primary waves-effect waves-light text-white m-1" href="@Url.Action("Details","Exportacao")" style="margin-left:20px"><i class="fa fa-plus"></i> Exportar Servidores</a>

                <div id="datatable-buttons_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer">

                    <table class="table table-striped table-bordered fixed dt-responsive nowrap dataTable no-footer collapsed" id="datatable">
                        <thead class="text-center">
                            <tr>
                                <th>
                                    MATRICULA
                                </th>

                                <th>
                                    SERVIDOR
                                </th>

                                <th>
                                    ADMISSÃO
                                </th>
                                <th>
                                    DEMISSÃO
                                </th>

                                <th>
                                    PIS
                                </th>

                                <th>Ações</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(model => item.n_identificador)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(model => item.nome)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(model => item.admissao)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => item.demissao)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(model => item.n_pis)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                                        @Html.ActionLink("Details", "Details", new { id = item.id }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.id })
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>



<link href="~/Scripts/Grid/DataTables-1.10.16/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
<link href="~/Scripts/Grid/Responsive-2.2.1/css/responsive.bootstrap4.min.css" rel="stylesheet" />

@section scripts{
    @Scripts.Render("~/bundles/Grid")

    <script type="text/javascript">
        var dataTable;
        $(document).ready(function () {


            $("#datatable").dataTable({
                "autoWidth": false,
                "order":
                    [0, "asc"],
                "dom": '<"toolbar">frtip'
            });


        });



    </script>
}

