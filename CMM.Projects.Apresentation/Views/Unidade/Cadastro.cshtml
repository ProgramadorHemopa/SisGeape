@model CMM.Projects.Apresentation.Models.UnidadeModelView

@using CMM.Projects.Apresentation.Utils;


@{
    ViewData["TituloPagina"] = "Cadastro de Unidades";

}
<div class="row m-b-15">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-body">


                @using (Html.BeginForm("Cadastro", "Unidade", FormMethod.Post, new { autocomplete = "off" }))
                {
                    @Html.AntiForgeryToken()


                    <div class="row ">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.UND_ID)
                        <div class="form-group col-md-3 col-lg-3 col-xs-3">

                            @Html.LabelFor(model => model.UND_SIGLA, htmlAttributes: new { @class = "" })
                            @Html.EditorFor(model => model.UND_SIGLA, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                            @Html.ValidationMessageFor(model => model.UND_SIGLA, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group col-md-3 col-lg-3 col-xs-3">

                            @Html.LabelFor(model => model.UND_CODIGO, htmlAttributes: new { @class = "" })
                            @Html.EditorFor(model => model.UND_CODIGO, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                            @Html.ValidationMessageFor(model => model.UND_CODIGO, "", new { @class = "text-danger" })
                        </div>


                        <div class="form-group col-md-6 col-lg-6 col-xs-6">
                            @Html.LabelFor(model => model.UND_NOME, htmlAttributes: new { @class = "" })
                            @Html.EditorFor(model => model.UND_NOME, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                            @Html.ValidationMessageFor(model => model.UND_NOME, "", new { @class = "text-danger" })
                        </div>


                    </div>

                    <div class="row">
                        <div class="form-group col-md-6 col-lg-6 col-xs-6">

                            @Html.LabelFor(model => model.UND_NIVEL, htmlAttributes: new { @class = "control-label" })

                            @Html.EnumDropDownListFor(model => model.UND_NIVEL, "Selecione", htmlAttributes: new { @class = "form-control form-control-sm" })
                            @Html.ValidationMessageFor(model => model.UND_NIVEL, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-md-6 col-lg-6 col-xs-6">
                            @Html.LabelFor(model => model.UND_PAI, htmlAttributes: new { @class = "control-label" })
                            @Html.DropDownListFor(model => model.UND_PAI,(SelectList)ViewBag.Pai,"Selecione", htmlAttributes: new { @class = "form-control form-control-sm", required = true })
                            @Html.ValidationMessageFor(model => model.UND_PAI, "", new { @class = "text-danger" })
                        </div>

                    </div>
                    <div class="row">
                        <div class="form-group col-md-6 col-lg-6 col-xs-6">
                            @Html.LabelFor(model => model.UND_DATAINICIO, htmlAttributes: new { @class = "control-label" })

                            @Html.EditorFor(model => model.UND_DATAINICIO, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                            @Html.ValidationMessageFor(model => model.UND_DATAINICIO, "", new { @class = "text-danger" })

                        </div>

                        <div class="form-group col-md-6 col-lg-6 col-xs-6">
                            @Html.LabelFor(model => model.UND_DATAFIM, htmlAttributes: new { @class = "control-label" })

                            @Html.EditorFor(model => model.UND_DATAFIM, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                            @Html.ValidationMessageFor(model => model.UND_DATAFIM, "", new { @class = "text-danger" })

                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-8 col-lg-8 col-xs-8">

                            @Html.LabelFor(model => model.UND_DIRETORIO, htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.UND_DIRETORIO, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                            @Html.ValidationMessageFor(model => model.UND_DIRETORIO, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-md-4 col-lg-4 col-xs-4">

                            @Html.LabelFor(model => model.UND_RAMAL, htmlAttributes: new { @class = "control-label col-md-12" })
                            @Html.EditorFor(model => model.UND_RAMAL, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                            @Html.ValidationMessageFor(model => model.UND_RAMAL, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-md-12 col-lg-12 col-xs-12">

                            @Html.LabelFor(model => model.UND_COMPETENCIA, htmlAttributes: new { @class = "control-label" })
                            @Html.TextAreaFor(model => model.UND_COMPETENCIA, htmlAttributes: new { @class = "form-control form-control-sm" })
                            @Html.ValidationMessageFor(model => model.UND_COMPETENCIA, "", new { @class = "text-danger" })
                        </div>

                    </div>


                    <hr />

                    <div class="form-group">
                        <div class="pull-right m-t-15">
                            <a href="@Request.UrlReferrer" class="btn btn-sm btn-light">Voltar</a>

                            <input type="submit" value="Salvar" class="btn btn-sm btn-primary" />
                        </div>
                    </div>


                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}