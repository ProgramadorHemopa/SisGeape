@model CMM.Projects.Apresentation.Models.CargoModelView



<div class="modal-header">
    <h3 class="modal-title"><span class="fa fa-edit"></span> @ViewBag.Title</h3>

    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>

</div>
<div class="modal-body">

    @using (Html.BeginForm("AddUpdateCargo", "Cargo", FormMethod.Post, new { id = "formCrud", autocomplete="Off"  }))
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.CRG_ID)



        <div class="row">
            <div class="form-group col-md-3">

                @Html.LabelFor(model => model.CRG_CODIGO, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.CRG_CODIGO, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                @Html.ValidationMessageFor(model => model.CRG_CODIGO, "", new { @class = "text-danger" })
            </div>


            <div class="form-group col-md-9">

                @Html.LabelFor(model => model.CRG_NOME, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.CRG_NOME, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                @Html.ValidationMessageFor(model => model.CRG_NOME, "", new { @class = "text-danger" })

            </div>
        </div>

        <div class="row">

            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.CRG_REFSALARIAL, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.CRG_REFSALARIAL, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                @Html.ValidationMessageFor(model => model.CRG_REFSALARIAL, "", new { @class = "text-danger" })
            </div>


            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.CRG_REFCARGO, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.CRG_REFCARGO, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                @Html.ValidationMessageFor(model => model.CRG_REFCARGO, "", new { @class = "text-danger" })
            </div>

            <div class="form-group col-md-4">

                @Html.LabelFor(model => model.CRG_BASESALARIAL, htmlAttributes: new { @class = "control-label" })
                <div class="input-group input-group-sm mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text sm">R$</span>
                    </div>

                    @Html.EditorFor(model => model.CRG_BASESALARIAL, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                </div>
                @Html.ValidationMessageFor(model => model.CRG_BASESALARIAL, "", new { @class = "text-danger" })

            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-6">

                @Html.LabelFor(model => model.CRG_RISCOS, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.CRG_RISCOS, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                @Html.ValidationMessageFor(model => model.CRG_RISCOS, "", new { @class = "text-danger" })
            </div>

            <div class="form-group col-md-6">

                @Html.LabelFor(model => model.CRG_ESCOLARIDADE, htmlAttributes: new { @class = "control-label" })
                @Html.DropDownListFor(model => model.CRG_ESCOLARIDADE, (SelectList)ViewBag.ESCOLARIDADE, "Selecione", htmlAttributes: new { @class = "form-control form-control-sm" })
                @Html.ValidationMessageFor(model => model.CRG_ESCOLARIDADE, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row">

            <div class="form-group col-md-12">
                @Html.LabelFor(model => model.CRG_DESCRICAO, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.CRG_DESCRICAO, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                @Html.ValidationMessageFor(model => model.CRG_DESCRICAO, "", new { @class = "text-danger" })
            </div>
        </div>



    }
</div>


<div class="modal-footer">
    <a data-dismiss="modal" class="btn btn-sm btn-outline-secondary">Voltar</a>
    <input type="button" value="Salvar" class="btn btn-secondary" />
</div>


@Scripts.Render("~/bundles/jqueryval")
<script src="~/Scripts/ccm.projects/CustomValidacoes.js"></script>
<script src="~/Scripts/ccm.projects/EnviaForm.js"></script>
