@model CMM.Projects.Apresentation.Models.VinculoUnidadeModelView

<div class="modal-header">
    <h3 class="modal-title"><span class="fa fa-edit"></span> @ViewBag.Title</h3>

    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>

</div>
<div class="modal-body">
    @using (Html.BeginForm("AddUpdateVncUnd", "VinculoxUnidade", FormMethod.Post, new { id = "formCrud" }))
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.VNCU_ID)

        <div class="row">
            <div class="form-group col-md-12 col-lg-12">
                @Html.LabelFor(model => model.VNC_ID, "VÍNCULO", htmlAttributes: new { @class = "control-label" })

                @Html.DropDownList("VNC_ID", null,"Selecione", htmlAttributes: new { @class = "form-control form-control-sm" })
                @Html.ValidationMessageFor(model => model.VNC_ID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row">
            <div class="form-group col-md-12 col-lg-12">
                @Html.LabelFor(model => model.UND_ID, "UNIDADE", htmlAttributes: new { @class = "control-label" })

                @Html.DropDownList("UND_ID", null, "Selecione", htmlAttributes: new { @class = "form-control form-control-sm" })
                @Html.ValidationMessageFor(model => model.UND_ID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row">
            <div class="form-group col-md-6 col-lg-6">

                @Html.LabelFor(model => model.VNCU_DATAINICIO, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.VNCU_DATAINICIO, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                @Html.ValidationMessageFor(model => model.VNCU_DATAINICIO, "", new { @class = "text-danger" })
            </div>


            <div class="form-group col-md-6 col-lg-6">
                @Html.LabelFor(model => model.VNCU_DATAFIM, htmlAttributes: new { @class = "control-label" })

                @Html.EditorFor(model => model.VNCU_DATAFIM, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                @Html.ValidationMessageFor(model => model.VNCU_DATAFIM, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row">
            <div class="form-group col-md-12 col-lg-12">
                @Html.LabelFor(model => model.VNCU_ATRIBUICAO, htmlAttributes: new { @class = "control-label" })

                @Html.TextAreaFor(model => model.VNCU_ATRIBUICAO, htmlAttributes: new { @class = "form-control form-control-sm", @rows = 4 })
                @Html.ValidationMessageFor(model => model.VNCU_ATRIBUICAO, "", new { @class = "text-danger" })
            </div>
        </div>



    }
</div>
<div class="modal-footer">
    <a data-dismiss="modal" class="btn btn-sm btn-outline-secondary">Voltar</a>
    <input type="button" value="Salvar" class="btn btn-secondary" />
</div>


@Scripts.Render("~/bundles/jqueryval")
<script src="~/Scripts/ccm.projects/EnviaFormCad.js"></script>