@model CMM.Projects.Apresentation.Models.FeriadoModelView
@using CMM.Projects.Apresentation.Utils;

@{
    ViewData["TituloPagina"] = ViewBag.Title;
}

<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-body">
                <h4>Você tem certeza que deseja excluir este registro?</h4>
                <div>
                    <hr />
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.FER_DESCRICAO)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.FER_DESCRICAO)
                        </dd>

                        <dt>
                           @Html.DisplayNameFor(model => model.FER_DATA)
                        </dt>

                        <dd>
                            @Model.FER_DATA.Value.ToShortDateString()
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.FER_TIPO)
                        </dt>
                        <dd>
                            @Model.FER_TIPO.Descricao()
                        </dd>
                    </dl>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color">
                            <input type="submit" value="Excluir" class="btn btn-sm btn-danger" />
                            @Html.ActionLink("Voltar", "Index", null, new { @class = "btn-sm btn-light waves-light waves-effect" })
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
