@model CMM.Projects.Apresentation.Models.FeriadoModelView
@using CMM.Projects.Apresentation.Utils;
@{
    ViewData["TituloPagina"] = "Cadastro de Feriado";
}

<div class="row m-b-15">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-body">
                @using (Html.BeginForm("Cadastro","Feriado", new { @autocomplete="off"}))
                {
                    @Html.AntiForgeryToken()
     
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.FER_ID)
                    <div class="row">
                        <div class="form-group col-md-12 col-lg-12 col-xs-12">
                            @Html.LabelFor(model => model.FER_DESCRICAO, htmlAttributes: new { @class = "control-label col-md-2" })
                            @Html.EditorFor(model => model.FER_DESCRICAO, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.FER_DESCRICAO, "", new { @class = "text-danger" })
                            
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-md-12 col-lg-12 col-xs-12">
                            @Html.LabelFor(model => model.FER_DATA, htmlAttributes: new { @class = "control-label col-md-2" })
                            @Html.EditorFor(model => model.FER_DATA, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.FER_DATA, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-md-12 col-lg-12 col-xs-12">
                            @Html.LabelFor(model => model.FER_TIPO, htmlAttributes: new { @class = "control-label col-md-2" })
                            @Html.EnumDropDownListFor(model => model.FER_TIPO, htmlAttributes : new { @class = "form-control" } )
                            @Html.ValidationMessageFor(model => model.FER_TIPO, "", new { @class = "text-danger" })
                            
                        </div>
                    </div>

                    <hr />

                    <div class="form-group">
                        <div class="pull-right m-t-15">
                            <a href="@Request.UrlReferrer" class="btn btn-sm btn-light">Voltar</a>

                            <input type="submit" value="Salvar" class="btn btn-sm btn-primary" />
                        </div>
                    </div>
                }
            </div>
        </div>            
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
